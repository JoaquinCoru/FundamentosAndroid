<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DragonBallKeepcoding" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/dark_orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:colorButtonNormal">@color/green</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Colored</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DragonBallKeepcoding.EditText" parent="Theme.DragonBallKeepcoding">
        <item name="android:textSize">10sp</item>
        <item name="marginHorizontal">@dimen/margin_medium</item>
    </style>


</resources>